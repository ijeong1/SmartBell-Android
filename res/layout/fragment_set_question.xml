<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/set_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details about this set"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/enter_weight_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter weight used"
        android:inputType="number" >
    </EditText>

    
    <EditText
        android:id="@+id/enter_reps_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter expected reps"
        android:inputType="number" >

    </EditText>
    
    <Button
        android:id="@+id/start_recording_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start recording" />
   
</LinearLayout>