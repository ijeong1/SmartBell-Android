<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/athlete_info_box">

	<TextView android:id="@+id/question_text" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Question Text"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	
	<TextView android:id="@+id/question_help_text" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Question help text"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
	    android:id="@+id/question_answer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10" >

	    <requestFocus />
	</EditText>

</LinearLayout>
